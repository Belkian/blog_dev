{% extends 'base.html.twig' %}

{% block title %}Articles en attente{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-4">Articles en attente de validation</h1>

    <table class="table-auto w-full">
        <thead>
            <tr class="bg-gray-200">
                <th class="px-4 py-2">Id</th>
                <th class="px-4 py-2">Titre</th>
                <th class="px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr class="border-b">
                <td class="px-4 py-2">{{ article.id }}</td>
                <td class="px-4 py-2">{{ article.title }}</td>  
                <td class="px-4 py-2">
                    <a href="{{ path('app_article_accepter', {'id': article.id}) }}" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Accepter</a>
                    <a href="{{ path('app_article_refuser', {'id': article.id}) }}" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Refuser</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="px-4 py-2 text-center">Aucun article en attente</td> 
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

