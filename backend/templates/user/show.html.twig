{% extends 'base.html.twig' %}

{% block title %}Informations de l’utilisateur{% endblock %}

{% block body %}
    <h1>Informations de l’utilisateur</h1>

    <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 mb-4">
        <p class="text-lg font-bold">Prénom : {{ user.name }}</p>
        <p class="text-lg font-bold">Nom : {{ user.lastname }}</p>
        <p class="text-lg font-bold">Email : {{ user.email }}</p>
        <p class="text-lg font-bold">Compte actif : {{ user.isVerified ? 'oui' : 'non' }}</p>
    </div>

    <a href="{{ path('app_user_articles', {'id': user.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300">
    Voir tous ses articles
</a>


    <a href="{{ path('app_user_index') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-800 bg-gray-200 rounded-lg hover:bg-gray-300 focus:ring-4 focus:outline-none focus:ring-gray-300">
        Retour
    </a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
